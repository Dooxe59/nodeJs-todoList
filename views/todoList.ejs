<!DOCTYPE html>
<html>

<head>
  <title>Node js todo list</title>
</head>

<body>
  <h1>Node js todo list</h1>
  <ul>
    <% if (!todolist.length) {%>
    <span>Rien dans la todo list :)</span>
    <% } %>
    <% todolist.forEach((item, index) => { %>
    <li style="display: flex;">
      <form method="POST" action="/todo/update/<%= index %>">
        <input type="text" name="updatedItem" id="updatedItem" value="<%= item %>" />
        <input type="submit" value="Modifier" style="margin: 0 10px;" />
      </form>
      <form method="POST" action="/todo/delete/<%= index %>">
        <input type="submit" value="Supprimer" />
      </form>
    </li>
    <% }); %>
  </ul>
  <form method="POST" action="/todo/add/">
    <label for="newItem">Item Ã  ajouter: </label>
    <input type="text" name="newItem" id="newItem" required />
    <input type="submit" value="Ajouter" />
  </form>
</body>

</html>